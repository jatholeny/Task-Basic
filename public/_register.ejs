<section>
    <h1>Create User</h1>
    <div id="register_panel">
        <!--<form class="register">-->
            <!--<input class="create" type="text" ng-model="user.username" placeholder="Username*" required><br>-->
            <!--<input class="create" type="email" ng-model="user.email" placeholder="Email*" required><br>-->
            <!--<input class="create"  type="tel" ng-model="user.tel" placeholder="Phonenumber*" required><br>-->
            <!--<input class="create"type="text" ng-model="user.company" placeholder="Company"><br>-->
