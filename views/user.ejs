<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <script src="angular/angular.js"></script>
    <style>
        input{
            margin-bottom: 10px;
        }

    </style>
    <script>
        angular.module('userApp',[]).controller('userController',function($scope,UserService){

        }).factory('UserService',function($http){
            return{
                create:function(user){
                    return $http.post('/user',user);
                },
                search:function(user){
                    return $http.get('/user');
                },
                check:function(){
                    return $http.get('/user');
                },
                update:function(user){
                    return $http.put('/user/'+user.id,user);
                }
            }

        });
    </script>
</head>
<body>
    <fieldset>
        <legend>
            create new user
        </legend>
        <div>
            <input type="text" ng-model="user.username" placeholder="username"><br>
            <input type="email" ng-controller="user.email" placeholder="email"><br>
            <input type="tel" ng-model="user.tel" placeholder="phonenumber"><br>
            <input type="text" ng-model="user.company" placeholder="company"><br>
            <input type="text" ng-model="user.organization" placeholder="organization"><br>
            <input type="text" ng-model="user.department" placeholder="department"><br>
            <input type="button" value="Register" ng-click="register()">
        </div>
    </fieldset>
</body>
</html>